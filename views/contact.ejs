<% layout('layouts/boilerplate') %>

<style>
  .about-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .form-control,
  textarea {
    border-radius: 0.375rem;
    padding: 0.75rem 1rem;
    border: 1px solid #ced4da;
  }

  .contact-section {
    padding-top: 100px;
  }

  @media (max-width: 768px) {
    .display-4 {
      font-size: 2rem;
    }
    .about-icon {
      font-size: 2rem;
    }
  }
</style>

<div class="container my-5 contact-section">
  <!-- Hero Section -->
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Contact <span class="text-primary">EduRadar</span></h1>
    <p class="lead text-muted">We’re here to help! Reach out to us for any questions, feedback, or partnership inquiries.</p>
  </div>

  <!-- Contact Info and Form -->
  <div class="row mb-5">
    <div class="col-md-6 mb-4 mb-md-0">
      <div class="p-4 shadow-sm rounded-4 bg-light h-100">
        <h4 class="fw-semibold mb-3">Get in Touch</h4>
        <p class="text-muted mb-2"><i class="bi bi-geo-alt-fill text-danger me-2"></i> Noida, Uttar Pradesh, India</p>
        <p class="text-muted mb-2"><i class="bi bi-envelope-fill text-primary me-2"></i> support@eduradar.com</p>
        <p class="text-muted mb-2"><i class="bi bi-telephone-fill text-success me-2"></i> +91 98765 43210</p>
        <p class="text-muted"><i class="bi bi-clock-fill text-warning me-2"></i> Mon - Sat: 9:00 AM – 6:00 PM</p>
      </div>
    </div>

    <div class="col-md-6">
      <form class="shadow-sm rounded-4 p-4 bg-white">
        <div class="mb-3">
          <label for="name" class="form-label fw-semibold">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Your full name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
        </div>
        <div class="mb-3">
          <label for="subject" class="form-label fw-semibold">Subject</label>
          <input type="text" class="form-control" id="subject" placeholder="What’s your query about?" required>
        </div>
        <div class="mb-3">
          <label for="message" class="form-label fw-semibold">Message</label>
          <textarea class="form-control" id="message" rows="5" placeholder="Type your message..." required></textarea>
        </div>
        <div class="text-end">
          <button type="submit" class="btn btn-primary px-4 py-2">Send Message</button>
        </div>
      </form>
    </div>
  </div>

  <!-- CTA -->
  <div class="bg-light rounded-4 p-5 text-center shadow-sm">
    <h3 class="mb-3 fw-semibold">Still have questions?</h3>
    <a href="/faq" class="btn btn-outline-primary btn-lg px-4 py-2">Visit FAQ</a>
  </div>
</div>
