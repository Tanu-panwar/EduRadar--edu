<% layout("/layouts/boilerplate") %>
  <style>
    .filters {
      display: flex;
      flex-wrap: wrap;
      gap: 0.8rem;
      justify-content: center;
      margin: 1.5rem 1rem;
      text-decoration: none !important;
    }

    .filter {
      margin-right: 1rem !important;
      text-align: center;
      opacity: 0.7 !important;
      color: black !important;
      text-decoration: none !important;
      min-width: 80px;
      flex: 1 1 auto;
    }


    .filter p {
      font-size: 0.8rem;
    }

    .filter:hover {
      opacity: 1 !important;
      cursor: pointer;
    }

    /* .main {
      margin-left: 20px;
      margin-right: 20px;
      margin-top: 2rem;
    } */

    body {
      padding-top: 5rem;
    }

    .listings-container {
      margin-bottom: 3rem;
    }

    .card {
      transition: transform 0.2s ease, box-shadow 0.25s ease;
      background-color: #fff;
      border: 1px solid #eaeaea;
    }

    .card-body {
      padding: 1rem !important;
    }

    .card:hover {
      transform: translateY(-5px);
      transition: all 0.3s ease;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12);
    }


    .card-body p {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
    }

    .card-img-top {
      aspect-ratio: 4 / 3;
      object-fit: cover;
    }
  </style>

<div class="filters">
  <a href="/listings" class="filter">
    <div><i class="fa-solid fa-globe"></i></div>
    <p>All</p>
  </a>
  <a href="/listings?category=Coaching" class="filter">
    <div><i class="fa-solid fa-chalkboard-user"></i></div>
    <p>Coaching</p>
  </a>
  <a href="/listings?category=Cyber Cafe" class="filter">
    <div><i class="fa-solid fa-computer"></i></div>
    <p>Cyber Cafe</p>
  </a>
  <a href="/listings?category=Library" class="filter">
    <div><i class="fa-solid fa-book-open"></i></div>
    <p>Library</p>
  </a>
  <a href="/listings?category=Stationery" class="filter">
    <div><i class="fa-solid fa-pencil-ruler"></i></div>
    <p>Stationery</p>
  </a>
  <a href="/listings?category=Bookstore" class="filter">
    <div><i class="fa-solid fa-book"></i></div>
    <p>Bookstore</p>
  </a>
  <a href="/listings?category=institution" class="filter">
    <div><i class="fa-solid fa-school"></i></div>
    <p>Institution</p>
  </a>
</div>


  <div class="container-fluid px-3 listings-container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
      <% allListings.forEach(listing=> { %>
        <div class="col">
          <div class="card h-100 shadow-sm" style="border-radius: 1rem; overflow: hidden;">

            <!-- Image -->
            <div class="img-container" style="height: 16rem; overflow: hidden;">
              <% if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" alt="Listing Image"
                  style="width: 100%; height: 100%; object-fit: cover;">
                <% } else { %>
                  <div class="fallback-text text-muted text-center py-5">ðŸ“¦<br>No image available</div>
                  <% } %>
            </div>

            <!-- Content -->
            <div class="card-body py-3 px-3">
              <h6 class="fw-semibold mb-1">
                <%= listing.name %>
              </h6>
              <p class="text-muted mb-1" style="font-size: 13px;">
                <%= listing.location %>
              </p>
              <p class="mb-2" style="font-size: 13px;">
                <%= listing.description %>
              </p>

              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-success">
                  <%= listing.rating %> â˜…
                </span>
                <% if (currentUser) { %>
                  <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                  <% } else { %>
                    <a href="/login" class="btn btn-sm btn-outline-primary">View Details</a>
                    <% } %>
              </div>
            </div>

          </div>
        </div>

        <% }) %>
    </div>
  </div>