<% layout('layouts/boilerplate') %>

<style>
  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .display-4 {
      font-size: 2rem;
    }
    .feature-icon {
      font-size: 2rem;
    }
  }
</style>

<div class="container my-5">
  <div class="text-center mb-5 pt-5">
    <h1 class="display-4 fw-bold">Platform <span class="text-primary">Features</span></h1>
    <p class="lead text-muted">Discover what makes EduRadar a trusted choice for students across the country.</p>
  </div>

  <div class="row text-center mb-5">
    <div class="col-md-4 mb-4">
      <div class="card h-100 border-0 shadow-sm rounded-4 p-3">
        <div class="card-body">
          <i class="bi bi-geo-alt feature-icon text-danger"></i>
          <h5 class="card-title fw-bold">Location-Based Search</h5>
          <p class="card-text text-muted">Find nearby institutions and services tailored to your location and preferences.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100 border-0 shadow-sm rounded-4 p-3">
        <div class="card-body">
          <i class="bi bi-ui-checks feature-icon text-primary"></i>
          <h5 class="card-title fw-bold">Interactive Filters</h5>
          <p class="card-text text-muted">Use smart filters to narrow down exactly what you're looking for, quickly.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100 border-0 shadow-sm rounded-4 p-3">
        <div class="card-body">
          <i class="bi bi-bar-chart-line feature-icon text-success"></i>
          <h5 class="card-title fw-bold">Review Analytics</h5>
          <p class="card-text text-muted">View ratings, averages, and patterns to make smart, data-backed decisions.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-light rounded-4 p-5 text-center shadow-sm">
    <h3 class="mb-3 fw-semibold">Use EduRadar today and experience these features!</h3>
    <a href="/listings" class="btn btn-primary btn-lg px-4 py-2">Start Browsing</a>
  </div>
</div>
